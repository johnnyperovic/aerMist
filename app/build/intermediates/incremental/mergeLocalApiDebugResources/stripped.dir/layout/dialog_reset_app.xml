<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/white_container_12"
    android:paddingBottom="20dp">

    <View
        android:id="@+id/fakeView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/you_want_to_reset"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="@string/you_will_lose_all_your_setting"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <TextView
        android:id="@+id/cancelDialog"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/gray_radius_8"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/dark_text"
        android:textSize="14sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/fakeView"
        app:layout_constraintTop_toBottomOf="@id/subTitle" />

    <TextView
        android:id="@+id/resetBtn"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/orange_radius_8"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/reset"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/fakeView"
        app:layout_constraintTop_toBottomOf="@id/subTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>