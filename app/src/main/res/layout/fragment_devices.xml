<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.devices.MenageDevicesFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:text="@string/manage_devices"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:textColor="@color/dark_text"/>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/firstCardView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/radius_16_"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:id="@+id/firstDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="My left paddio"
            android:textColor="@color/dark_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/firstDotColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="47dp"
            android:src="@drawable/red_dot" />

        <TextView
            android:id="@+id/firstDeviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="42dp"
            android:text="@string/offline"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/firstInfoDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16sp"
            android:src="@drawable/three_dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/firstDeviceActiveHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/active"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/secondCardView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/radius_16_"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/firstCardView">

        <TextView
            android:id="@+id/secondDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="My left paddio"
            android:textColor="@color/dark_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/secondDotColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="47dp"
            android:src="@drawable/red_dot" />

        <TextView
            android:id="@+id/secondDeviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="42dp"
            android:text="@string/offline"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/secondInfoDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16sp"
            android:src="@drawable/three_dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondDeviceActiveHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/active"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/thirdCardView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/radius_16_"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/secondCardView">

        <TextView
            android:id="@+id/thirdDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="My left paddio"
            android:textColor="@color/dark_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/thirdDotColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="47dp"
            android:src="@drawable/red_dot" />

        <TextView
            android:id="@+id/thirdDeviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="42dp"
            android:text="@string/offline"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/thirdInfoDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16sp"
            android:src="@drawable/three_dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thirdDeviceActiveHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/active"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fourthCardView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/radius_16_"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/thirdCardView">

        <TextView
            android:id="@+id/fourthDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="My left paddio"
            android:textColor="@color/dark_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/fourthDotColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="47dp"
            android:src="@drawable/red_dot" />

        <TextView
            android:id="@+id/fourthDeviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="42dp"
            android:text="@string/offline"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/fourthInfoDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16sp"
            android:src="@drawable/three_dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fourthDeviceActiveHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/active"
            android:textColor="@color/someGrayColor"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/totalDeviceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_medium"
        android:text="1/4 devices"
        android:textColor="@color/someGrayColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/firstCardView"
        app:layout_constraintEnd_toEndOf="@id/firstCardView"
        app:layout_constraintTop_toBottomOf="@id/fourthCardView" />

    <Button
        android:id="@+id/btnAddNewDevice"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/add"
        android:textColor="@color/dark_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalDeviceNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>