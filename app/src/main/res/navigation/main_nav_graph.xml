<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="llc.aerMist.base.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_schedule_to_set_schedule_fragment"
            app:destination="@id/setScheduleFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_top"
            app:popEnterAnim="@anim/slide_in_top"
            app:popExitAnim="@anim/slide_out_bottom"
            app:popUpTo="@+id/setScheduleFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/deviceFragment"
        android:name="llc.aerMist.base.ui.devices.DevicesFragment"
        android:label="DeviceFragment"
        tools:layout="@layout/fragment_devices" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="llc.aerMist.base.ui.info.InfoFragment"
        android:label="InfoFragment"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/setScheduleFragment"
        android:name="llc.aerMist.base.ui.home.schedulere.SetScheduleFragment"
        android:label="SetScheduleFragment"
        tools:layout="@layout/fragment_set_schedule" />
</navigation>